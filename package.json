{
  "name": "web-service",
  "version": "0.0.1",
  "description": "Node.js REST API",
  "license": "UNLICENCED",
  "author": "Stanislau Shliakhtsich",
  "scripts": {
    "pm2:start": "pm2 start ./dist/index.js --watch --name web-serivce",
    "pm2:status": "pm2 status web-serivce",
    "pm2:stop": "pm2 stop web-serivce",
    "pm2:mon": "pm2 monit web-serivce",
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development nodemon --config nodemon.json",
    "debug": "cross-env NODE_ENV=development nodemon --config nodemon-debug.json",
    "checkup": "yarn run yarn:install && yarn run prettier:fix && yarn run eslint:run && yarn run test",
    "yarn:install": "yarn install",
    "test": "yarn jest",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "eslint:run": "eslint \"src/**/*.ts\"",
    "eslint:fix": "eslint --fix \"src/**/*.ts\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "celebrate": "^13.0.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "errorhandler": "^1.5.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.3",
    "helmet": "^4.4.1",
    "module-alias": "^2.2.2",
    "ramda": "^0.27.1",
    "ts-node": "^9.1.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/express-rate-limit": "^5.1.1",
    "@types/jest": "^26.0.20",
    "@types/ramda": "^0.27.36",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pm2": "^4.5.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "_moduleAliases": {
    "@common": "src/common",    
    "@config": "src/config",
    "@databases": "src/databases",
    "@helpers": "src/helpers",    
    "@loaders": "src/loaders",
    "@logger": "src/helpers/logger",
    "@models": "src/models",
    "@components": "src/components",
    "@middleware": "src/middleware"
  }
}